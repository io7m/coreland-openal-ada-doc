(section
  (ref "openal_context_close_device")
  (title "OpenAL.Context.Close_Device")
  (para procedure_desc "Close audio device")
  (subsection
    (title "Synopsis")
    (para-verbatim procedure_synopsis
"with OpenAL.Context;

procedure Close_Device (Device : in out Device_t);
"))
  (subsection
    (title "Description")
    (para
      "The " (item ada_procedure "Close_Device") " procedure closes
      the audio device specified by " (item parameter "Device") ".")
    (para
      "The procedure will set " (item parameter "Device") " to "
      (item constant "OpenAL.Context.Invalid_Device") "."))
  (subsection
    (title "Mapping")
    (para
      "The " (item ada_subprogram "Close_Device") " subprogram is equivalent
      to " (item c_function "alcCloseDevice") ".")))
