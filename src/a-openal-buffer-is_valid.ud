(section
  (ref "openal_buffer_is_valid")
  (title "OpenAL.Buffer.Is_Valid")
  (para function_desc "Is valid buffer?")
  (subsection
    (title "Synopsis")
    (para-verbatim function_synopsis
"with OpenAL.Buffer;

function Is_Valid (Buffer : in Buffer_t) return Boolean;
"))
  (subsection
    (title "Description")
    (para
      "The " (item ada_function "Is_Valid") " function returns "
      (item constant "True") " if the buffer specified by "
      (item parameter "Buffer") " is valid."))
  (subsection
    (title "Mapping")
    (para
      "The " (item ada_subprogram "Is_Valid") " function is
      equivalent to " (item c_function "alIsBuffer") ".")))
